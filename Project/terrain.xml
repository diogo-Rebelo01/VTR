<?xml version="1.0" ?>
<project name="Terrain Generation" width="1920" height="1080">
	<assets>
		<attributes>
            <attribute type="RENDERER" data="INT"   name="num_octaves" value="4"  />
            <attribute type="RENDERER" data="FLOAT" name="seed"        value="1"  />
            <attribute type="RENDERER" data="FLOAT" name="seedMoisure" value="1"  />
            <attribute type="RENDERER" data="FLOAT" name="level"       value="10" />
            <attribute type="RENDERER" data="FLOAT" name="scaleTex"    value="10" />
            <!-- COLORS BIOMES -->
            <attribute type="RENDERER" data="VEC4" name="BEACH"                      x="0.996" y="0.859" z="0.718"/>
            <attribute type="RENDERER" data="VEC4" name="SCORCHED"                   x="0.208" y="0.122" z="0.098"/>
            <attribute type="RENDERER" data="VEC4" name="BARE"                       x="0.299" y="0.422" z="0.291"/>
            <attribute type="RENDERER" data="VEC4" name="TUNDRA"                     x="0.791" y="0.917" z="0.913"/>
            <attribute type="RENDERER" data="VEC4" name="SNOW"                       x="1.000" y="1.000" z="1.000"/>
            <attribute type="RENDERER" data="VEC4" name="SHRUBLAND"                  x="0.835" y="0.741" z="0.565"/>
            <attribute type="RENDERER" data="VEC4" name="TAIGA"                      x="0.282" y="0.286" z="0.216"/>
            <attribute type="RENDERER" data="VEC4" name="TEMPERATE_DESERT"           x="0.812" y="0.518" z="0.349"/>
            <attribute type="RENDERER" data="VEC4" name="GRASSLAND"                  x="0.643" y="0.643" z="0.322"/>
            <attribute type="RENDERER" data="VEC4" name="TEMPERATE_DECIDUOUS_FOREST" x="0.095" y="0.284" z="0.156"/>
            <attribute type="RENDERER" data="VEC4" name="TEMPERATE_RAIN_FOREST"      x="0.333" y="0.588" z="0.102"/>
            <attribute type="RENDERER" data="VEC4" name="SUBTROPICAL_DESERT"         x="0.592" y="0.459" z="0.349"/>
            <attribute type="RENDERER" data="VEC4" name="TROPICAL_SEASONAL_FOREST"   x="0.608" y="0.627" z="0.157"/>
            <attribute type="RENDERER" data="VEC4" name="TROPICAL_RAIN_FOREST"       x="0.208" y="0.278" z="0.035"/>
            <attribute type="RENDERER" data="VEC4" name="WATER"                      x="0.058" y="0.368" z="0.611"/>
            <!-- NOISE SETTINGS -->
            <attribute type="RENDERER" data="FLOAT" name="amplitude"      value="500.0" />
            <attribute type="RENDERER" data="FLOAT" name="frequencia"     value="1.0"   />
            <attribute type="RENDERER" data="FLOAT" name="redistribuicao" value="1.0"   />
            <attribute type="RENDERER" data="FLOAT" name="opacity"        value="0.5"   />
            <attribute type="RENDERER" data="FLOAT" name="scale"          value="1.0"   />
            <attribute type="RENDERER" data="FLOAT" name="scaleMoisture"  value="1.0"   />
            <!-- LAYERS SETTINGS -->
            <attribute type="RENDERER" data="FLOAT" name="first_level"    value="50"    />
			<attribute type="RENDERER" data="FLOAT" name="second_level"   value="300"   />
			<attribute type="RENDERER" data="FLOAT" name="third_level"    value="700"   />
            <attribute type="RENDERER" data="FLOAT" name="fourth_level"   value="950"   />
            <attribute type="RENDERER" data="FLOAT" name="water_level"    value="75"    />
            <attribute type="RENDERER" data="INT"   name="use_moisture"   value="1"     />
            <attribute type="RENDERER" data="INT"   name="use_textures"   value="1"     />

		</attributes>
		<scenes>
            <scene name = "skybox">
                <geometry name = "skybox" material="skybox" type="BOX">
                    <SCALE x = "100" y="100" z="100"/>
                </geometry>
            </scene>
            <scene name="Terreno" >
				<geometry name="terrain" type ="GRID" LENGTH="10000" DIVISIONS="100" material="terrain">
                    <TRANSLATE x="0.0" y="0.0" z="0.0" />
                </geometry>
			</scene>
            <scene name="Water" >
				<geometry name = "water" type = "GRID" LENGTH="20000"  DIVISIONS="4" material="water">
                    <TRANSLATE x="0.0" y="0.0" z="0.0" />
                </geometry>
			</scene>
		</scenes>
        <viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<POSITION x="0.0"   y="700.0"  z="2000.0" />
				<VIEW     x="0.0"   y="-0.5"   z="-1.0"   />
				<UP       x="0.0"   y="1.0"    z="0.0"    />
			</camera>
		</cameras>
        <lights>
			<light name="Sun" >
				<DIRECTION x="1.0" y="-0.5" z="-2" />
			</light>
		</lights>
        		
		<materialLibs>
			<materialLib filename="terrain.mlib"/>
		</materialLibs>
		
	</assets>
    <pipelines>
        <pipeline name="noise" defaultCamera= "MainCamera" >
            <pass name="noise" class="default" >
                <scenes>
                    <scene name="skybox"/>
                    <scene name="Terreno" />
                    <scene name="Water"/>
                </scenes>
                <camera name="MainCamera" />
                <lights>
                    <light name="Sun" />
                </lights>
 				<materialMaps>
                    <map fromMaterial="skybox" toMaterial="skybox" toLibrary="Terrain" />
                    <map fromMaterial="terrain" toMaterial="terrain"  toLibrary="Terrain" />
                    <map fromMaterial="water"   toMaterial="water"    toLibrary="Terrain" />
				</materialMaps>
            </pass>
        </pipeline>
    </pipelines>

    <interface>
        <window label="Noise Settings" >
            <var type="RENDERER" context="CURRENT" label="Octaves"        component="num_octaves"    def="step=1   min=1    max=16"   />
            <var type="RENDERER" context="CURRENT" label="Seed"           component="seed"           def="step=0.1 min=1    max=100"  />
            <var type="RENDERER" context="CURRENT" label="Seed 2"         component="seedMoisure"    def="step=0.1 min=1    max=100"  />
            <var type="RENDERER" context="CURRENT" label="level"          component="level"          def="step=0.1 min=1    max=64 "  />
            <var type="RENDERER" context="CURRENT" label="Amplitude"      component="amplitude"      def="step=10  min=500  max=2000" />
            <var type="RENDERER" context="CURRENT" label="Frequencia"     component="frequencia"     def="step=0.1 min=0.1  max=5"    />
            <var type="RENDERER" context="CURRENT" label="Redistribuição" component="redistribuicao" def="step=0.5 min=0.01 max=5"    />
        </window>
        <window label="Biomes Colors">
            <var type="RENDERER" context="CURRENT" label="WATER"                      component="WATER"                      mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="BEACH"                      component="BEACH"                      mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="SCORCHED"                   component="SCORCHED"                   mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="BARE"                       component="BARE"                       mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="TUNDRA"                     component="TUNDRA"                     mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="SNOW"                       component="SNOW"                       mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="SHRUBLAND"                  component="SHRUBLAND"                  mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="TAIGA"                      component="TAIGA"                      mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="TEMPERATE_DESERT"           component="TEMPERATE_DESERT"           mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="GRASSLAND"                  component="GRASSLAND"                  mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="TEMPERATE_DECIDUOUS_FOREST" component="TEMPERATE_DECIDUOUS_FOREST" mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="TEMPERATE_RAIN_FOREST"      component="TEMPERATE_RAIN_FOREST"      mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="SUBTROPICAL_DESERT"         component="SUBTROPICAL_DESERT"         mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="TROPICAL_SEASONAL_FOREST"   component="TROPICAL_SEASONAL_FOREST"   mode="COLOR"/>
            <var type="RENDERER" context="CURRENT" label="TROPICAL_RAIN_FOREST"       component="TROPICAL_RAIN_FOREST"       mode="COLOR"/>
        </window>
        <window label="Layers Settings">
            <var type="RENDERER" context="CURRENT" label="Primeiro Nível"    component="first_level"   def="step=10   min=0   max=50"   />
            <var type="RENDERER" context="CURRENT" label="Segundo Nível"     component="second_level"  def="step=10   min=50  max=550"  />
            <var type="RENDERER" context="CURRENT" label="Terceiro Nível"    component="third_level"   def="step=10   min=550 max=850"  />
            <var type="RENDERER" context="CURRENT" label="Quarto Nível"      component="fourth_level"  def="step=10   min=850 max=1050" />
            <var type="RENDERER" context="CURRENT" label="Nível da Água"     component="water_level"   def="step=10   min=0   max=150"  />
            <var type="RENDERER" context="CURRENT" label="Scale"             component="scale"         def="step=0.05 min=0.1 max=2"    />
            <var type="RENDERER" context="CURRENT" label="Scale Moisture"    component="scaleMoisture" def="step=0.05 min=0.1 max=2"    />
            <var type="RENDERER" context="CURRENT" label="Scale Texture"     component="scaleTex"      def="step=0.1  min=1.0 max=20"   />
            <var type="RENDERER" context="CURRENT" label="Opacidade da Água" component="opacity"       def="step=0.05 min=0.1 max=0.7"  />
            <var type="RENDERER" context="CURRENT" label="Moisture"          component="use_moisture"  def="step=1    min=0   max=1"    />
            <var type="RENDERER" context="CURRENT" label="Textures"          component="use_textures"  def="step=1    min=0   max=1"    />
        </window>
    </interface>
</project>
		
	