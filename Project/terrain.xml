<?xml version="1.0" ?>
<project name="Terrain Generation" width="512" height="512">
	<assets>
		<attributes>
            <attribute name="num_octaves" type="RENDERER" data="INT" value="4" />
            <attribute name="seed" type="RENDERER" data="INT" value="1" />
            <attribute name="level" data="FLOAT" type="RENDERER" value="10" />
            <attribute type="RENDERER" name="dirt" data="VEC4" x="0.183" y="0.161" z="0.121" w="1.0"/>
            <attribute type="RENDERER" name="grass" data="VEC4" x="0.266" y="0.411" z="0.239" w="1.0"/>
            <attribute type="RENDERER" name="snow" data="VEC4" x="1" y="1" z="1" w="1.0"/>
            <attribute type="RENDERER" name="sand" data="VEC4" x="0.76" y="0.7" z="0.5" w="1.0"/>
            <attribute type="RENDERER" name="water" data="VEC4" x="0.058" y="0.368" z="0.611" w="1.0"/>
            <attribute name="amplitude" type="RENDERER" data= "FLOAT" value="1200.0" />
            <attribute name="frequencia" type="RENDERER" data= "FLOAT" value="1.0" />
            <attribute name="redistribuicao" type="RENDERER" data= "FLOAT" value="1.0" />
            <attribute type="RENDERER" name="opacity" data="FLOAT" value="0.5"/>
            <attribute type="RENDERER" name="scale" data="FLOAT" value="0.1"/>
            <attribute type="RENDERER" name="first_level" data="FLOAT" value="100"/>
			<attribute type="RENDERER" name="second_level" data="FLOAT" value="400"/>
            <attribute type="RENDERER" name="water_level" data="FLOAT" value="50"/>
			<attribute type="RENDERER" name="third_level" data="FLOAT" value="900"/>

		</attributes>
		<scenes>
            <scene name="Terreno" >
				<geometry name="terrain" type ="GRID" LENGTH="10000" DIVISIONS="100" material="terrain">
                    <TRANSLATE x="0.0" y="0.0" z="0.0" />
                </geometry>
			</scene>
            <scene name="Water" >
				<geometry name = "water" type = "GRID" LENGTH="20000"  DIVISIONS="4" material="water">
                    <TRANSLATE x="0.0" y="0.0" z="0.0" />
                </geometry>
			</scene>
		</scenes>
        <viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<POSITION x="0" y="700" z="2000" />
				<VIEW x="0.0" y="-0.5" z="-1.0" />
				<UP x="0" y="1" z="0" />
			</camera>
		</cameras>
        <lights>
			<light name="Sun" >
				<DIRECTION x="1.0" y="-0.5" z="-2" />
			</light>
		</lights>
        		
		<materialLibs>
			<materialLib filename="terrain.mlib"/>
		</materialLibs>
		
	</assets>
    <pipelines>
        <pipeline name="noise" defaultCamera= "MainCamera" >
            <pass name="noise" class="default" >
                <scenes>
                    <scene name="Terreno" />
                    <scene name="Water"/>
                </scenes>
                <camera name="MainCamera" />
                <lights>
                    <light name="Sun" />
                </lights>
 				<materialMaps>
                    <map fromMaterial="terrain" toMaterial="terrain"  toLibrary="Terrain" />
                    <map fromMaterial="water" toMaterial="water"  toLibrary="Terrain" />
				</materialMaps>
            </pass>
        </pipeline>
    </pipelines>

    <interface>
        <window label="Settings" >
            <var label="Num  Octaves" type="RENDERER" context="CURRENT" component="num_octaves" def="step=1 min=1 max=8" />
            <var label="Seed" type="RENDERER" context="CURRENT" component="seed" def="step=1 min=1 max=100" />
            <var label="level" type="RENDERER" context="CURRENT" component="level" 
                    def="min=1 max=64 step=0.01"/>
            <var label="dirt" type="RENDERER" context="CURRENT" component="dirt" mode="COLOR" />
            <var label="grass" type="RENDERER" context="CURRENT" component="grass" mode="COLOR" />
            <var label="snow" type="RENDERER" context="CURRENT" component="snow" mode="COLOR" />
            <var label="sand" type="RENDERER" context="CURRENT" component="sand" mode="COLOR" />
            <var label="water" type="RENDERER" context="CURRENT" component="water" mode="COLOR" />
            <var label="Amplitude" type="RENDERER" context="CURRENT" component="amplitude" def="step=10 min=500 max=2000" />
            <var label="Frequencia" type="RENDERER" context="CURRENT" component="frequencia" def="step=0.1 min=1 max=10" />
            <var label="Redistribuição" type="RENDERER" context="CURRENT" component="redistribuicao" def="step=0.5 min=0.01 max=10" />
            <var label="Scale" type="RENDERER" context="CURRENT" component="scale" def="step=0.05 min=0.1 max=2" />
            <var label="Opacidade" type="RENDERER" context="CURRENT" component="opacity" def="step=0.05 min=0.3 max=0.5" />
            <var label="Primeiro Nível" type="RENDERER" context="CURRENT" component="first_level" def="step=10 min=0 max=100" />
            <var label="Segundo Nível" type="RENDERER" context="CURRENT" component="second_level" def="step=10 min=100 max=800" />
            <var label="Nível da Água" type="RENDERER" context="CURRENT" component="water_level" def="step=10 min=0 max=150" />
            <var label="Terceiro Nível" type="RENDERER" context="CURRENT" component="third_level" def="step=10 min=800 max=1100" />
        </window>
    </interface>
</project>
		
	