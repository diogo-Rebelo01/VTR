<?xml version="1.0" ?>
<project name="Cloth Simulation" width="512" height="512">
	<assets>
		<attributes>
			<attribute type="RENDERER" name="windScale" data="FLOAT" value="0.50"/>
		</attributes>
		<scenes>
            <scene name="cloth" >
				<TRANSLATE x = "0" y = "-0.4" z = "0" />
                <ROTATE x = "0" y = "0" z= "1" w="90" />
				<SCALE x = "3" y = "2" z = "3" />
				<geometry name="cloth" type ="GRID" material="cloth" DIVISIONS="100" />
			</scene>
		</scenes>
        <viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<POSITION x="-4" y="0" z="0" />
				<VIEW x="1.0" y="0" z="0.0" />
				<UP x="0" y="1" z="0" />
				<NEAR value="0.1" />
				<FAR value="1000" />
			</camera>
		</cameras>
        <lights>
			<light name="Sun" >
				<DIRECTION x="1.0" y="0" z="0" />
			</light>
		</lights>
        		
		<materialLibs>
			<materialLib filename="cloth.mlib"/>
		</materialLibs>
		
	</assets>
    <pipelines>
        <pipeline name="cloth" >
            <pass name="cloth" class="default" >
                <scenes>
                    <scene name="cloth" />
                </scenes>
                <camera name="MainCamera" />
                <lights>
                    <light name="Sun" />
                </lights>
                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromMaterial ="cloth" fromLibrary="cloth simul" />
                        <color fromMaterial ="shine" fromLibrary="cloth simul"
                                                    ambient="false"
                                                    diffuse="false"
                                                    emission="false"
                                                    specular="false"
                                                    shininess="true"/>
                    </map>

                </injectionMaps>
            </pass>
        </pipeline>

        <interface>
            <window label="settings" >
                <var label="wind scale" type="RENDERER" context="CURRENT" 
                        component="windScale" def="min=0.001 max=1 step=0.001" />
                
            </window>
        </interface>
    </pipelines>
</project>
		
	